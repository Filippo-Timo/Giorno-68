<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="giorno69pu">

        <!-- TODO: Aggiungi elenco delle entities -->
        <class>filippotimo.entities.Evento</class>
        <class>filippotimo.entities.Persona</class>
        <class>filippotimo.entities.Partecipazione</class>
        <class>filippotimo.entities.Location</class>
        <class>filippotimo.entities.PartitaDiCalcio</class>
        <class>filippotimo.entities.GaraDiAtletica</class>
        <class>filippotimo.entities.Concerto</class>


        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/giorno69"/>
            <!--  gestioneeventi è il nome del DB (se questo non è già stato creato in PgAdmin avrò un errore-->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--  Quest'ultima impostazione servirà per far creare/aggiornare le tabelle in automatico all'avvio dell'applicazione-->
        </properties>
    </persistence-unit>

</persistence>